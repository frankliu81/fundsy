<%= simple_form_for @user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%# catpants is a gem that does password validation  %>
  <%= f.input :password, label_html: {id: "catpants"} %>
  <%= f.input :password_confirmation %>

  <div class="form-actions">
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  </div>

<% end  %>
